@page 
@model BudgetTracker.Pages.ViewDebitsModel
@{
    ViewData["Title"] = "View Direct Debits";

}
<br />
<div class="container">
    <div class="row">
        <div class="col-md-5">
            <table class="table table-sm table-hover table-bordered table-light">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Cost Per Month</th>
                        <th scope="col">Payment Date</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.debits)
                    {
                        <tr class="table-light">
                            <th scope="row">@item.ID</th>
                            <td>@item.Name</td>
                            <td>£@item.Cost</td>
                            <td>@item.PaymentDate</td>
                            <td><a href="/Forms/Edit/@item.ID" class="btn btn-warning">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
            <div class="col-md-6">
            <h4>Current Monthly Total: £@Model.totalSpend </h4><br />
            <td><a href="/Forms/AddDebit/" class="btn btn-primary">Add New Direct Debit</a></td>
            

            </div>
        </div>
</div>  