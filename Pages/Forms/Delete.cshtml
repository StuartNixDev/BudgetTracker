@page "{id?}"
@model BudgetTracker.Pages.Forms.DeleteModel
@{
}

<h2>Are you sure you wish to delete this direct debit!</h2>
<form method="post">
    @foreach (var item in Model.target)
    { 
        <div class="form-group">
            <label for="ID">Debit ID</label>
            <input type="text" class="form-control" id="displayID" aria-describedby="IDHelp" name="ID" value=@item.ID readonly>
            <small id="displayID" class="form-text text-muted">Direct Debit ID.</small>
        </div>
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="displayName" name="Name" value='@item.Name' readonly>
        </div>
        <div class="form-group">
            <label for="Cost">Cost Per Month (£)</label>
            <input type="text" class="form-control" id="displayCost" name="Cost" value=@item.Cost readonly>
        </div>
        <div class="form-group">
            <label for="PaymentDate">Payment Date</label>
            <input type="text" class="form-control" id="displayDate" name="PaymentDate" value='@item.PaymentDate' readonly>
        </div>
        <br />
    }
    <button type="submit" formmethod="post" class="btn btn-danger">Delete</button>
</form>
<br />
<a href="/ViewDebits" class="btn btn-primary">Return to Debit View</a>


