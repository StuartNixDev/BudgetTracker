@page
@model BudgetTracker.Pages.Forms.AddDebitModel
@{
}

<form method="post">

    <div class="form-group">
        <label for="ID">Debit ID</label>
        <input type="text" class="form-control" id="displayID" aria-describedby="IDHelp" name="ID" required>
        <small id="displayID" class="form-text text-muted">Direct Debit ID.</small>
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="displayName" name="Name" required>
    </div>
    <div class="form-group">
        <label for="Cost">Cost Per Month (£)</label>
        <input type="text" class="form-control" id="displayCost" name="Cost" required>
    </div>
    <div class="form-group">
        <label for="PaymentDate">Payment Date</label>
        <input type="text" class="form-control" id="displayDate" name="PaymentDate" required>
    </div>
    <br />
    <button type="submit" formmethod="post" class="btn btn-warning">Add New Debit</button>

</form>

  